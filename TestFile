-- Creating Fact Tables
	--- squirrel_sightings
		--ages
		-- colors
		--shifts
	
	---outings
drop table outings ;
CREATE table if not EXISTS "outings" (
  "outing_id" SERIAL,
  "date" date,
  "start_time" time,
  "end_time" time,
  "park_id" character varying(15),
  "area_id" character(1),
  "condition_id" integer,
  "condition_desc" character varying(250),
  "litter_id" integer,
  "litter_desc" character varying(250),
  "weather_id" integer,
  "weather_desc" character varying(250),
  "temp_id" integer,
  "group_id" character varying(3),
  PRIMARY KEY ("outing_id")
);


  

insert into outings (
date,
area_id,
park_id,
start_time, 
end_time,
condition_desc,
litter_desc,
weather_desc)
select date,
	area_id, 
	park_id,
	start_time :: TIME,
	end_time :: TIME,
	park_condition,
	litter,
	temp_and_weather
from park_data;

--confirming that table is populated with data from park_data
select * from outings limit 5;
